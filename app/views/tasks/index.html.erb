  <div class="container">
  <h1>My Tasks</h1>
  <ul>
        <% @tasks.each do |task| %>
       <li>
        <%= check_box_tag :completed %>
        <span><%= link_to task.title, task_path(task) %></span>
        <div class="btn btn-primary">
        <%= link_to "Edit", task_edit_path(task.id) %>
        </div>
        <div class="btn btn-danger">
        <%= link_to "Delete", task_path(task.id), data:{turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %>
        </div>
      </li>
        <% end %>
    </ul>
  <div class="btn btn-warning"><%= link_to "New", tasks_new_path %></div>
</div>
